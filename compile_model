#!/bin/bash
#read -p "Enter case folder name:  " ${case}
# "case" is the place workdir directory in a sence.

read -p "!! Enter machine: 0) Oxygen with scratch; 1) local mac with scratch; 2) ptz-poisson; 3) mac_solo; 4) mingan; 5) My computer" pcid
#read pcid
if [ "${pcid}" == "0" ]
then 
    machine_name=Oxygen
    fftw_path=/share/apps/fftw/3.3.4
    model_path=/scratch/tpeng/
elif [ "${pcid}" == "1" ] 
then
    machine_name=mac_scratch_mounted
    fftw_path=/share/apps/fftw/3.3.4
    model_path=/Volumes/scratch/
elif [ "${pcid}" == "2" ] 
then
    machine_name=ptz-poisson
    fftw_path=/usr/include
    model_path=./
elif [ "${pcid}" == "3" ] 
then
    machine_name=mac_solo
    fftw_path=/usr/local/include
    model_path=./
elif [ "${pcid}" == "4" ] 
then
    machine_name=mingan
    fftw_path=/share/apps/fftw/3.3.4
    model_path=$PATH_SLAB_MODEL
    # Which case : 
    case=/share/work/celiz2/MPI_learning/CLASSIQUE_2pi_init
    #case=/share/work/celiz2/MPI_learning/SW_after
    #case=/share/work/celiz2/MPI_learning/COU_2pi_init
elif [ "${pcid}" == "5" ] 
then
    machine_name=Turbule
    fftw_path=/aos/home/celizotte/libfftw3
    lapack_path=/usr/lib64/
    mudpack_path=~/mudpack5.0.1/lib
    model_path=~/Desktop/Modele-shallow-water-multicouches
    # Which case :
    case=~/Desktop/Modele-shallow-water-multicouches/testcase
    #case=~/Desktop/Modele-shallow-water-multicouches/testfft
    #case=/share/work/celiz2/MPI_learning/SW_after
    #case=/share/work/celiz2/MPI_learning/COU_2pi_init

fi
echo "!! ${pcid} was selected"
echo "!! Using setting for ${machine_name} with fftw stored at ${fftw_path}"
cp "${model_path}/parameters.f90" "${case}/."
echo "!! Parameters file copied from ${model_path} to ${case}"
#mpiifort -O3 -o  $case/exec $model_path/main.f90  -L$fftw_path -lfftw3
gfortran -o  $case/exec $model_path/main.f90 -lfftw3 -lblas -llapack -L$mudpack_path -lmudpack
#gfortran -o  $case/exec $model_path/main_fft.f90 -lfftw3 -lblas -llapack -L$mudpack_path -lmudpack
#cp ${model_path}/parameters.f90 ${case}/parameters.f90_last_compiled
cp ${model_path}/parameters.f90 ${case}/parameters.f90_last_compiled
cp ${model_path}/parameters.f90 ${model_path}/parameters.f90_last_compiled
echo "!! Compilation of $case completed on the computer $machine_name "
